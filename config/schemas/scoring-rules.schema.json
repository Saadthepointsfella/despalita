{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maxmin.agency/schemas/scoring-rules.schema.json",
  "type": "object",
  "required": [
    "version",
    "rounding",
    "dimension_scoring",
    "overall_scoring",
    "gaps",
    "level_mapping",
    "tier_thresholds",
    "cta_rules"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string"
    },
    "rounding": {
      "type": "object",
      "required": [
        "score_decimal_places",
        "display_decimal_places"
      ],
      "additionalProperties": false,
      "properties": {
        "score_decimal_places": {
          "type": "integer",
          "minimum": 0,
          "maximum": 4
        },
        "display_decimal_places": {
          "type": "integer",
          "minimum": 0,
          "maximum": 2
        }
      }
    },
    "dimension_scoring": {
      "type": "object",
      "required": [
        "questions_per_dimension",
        "dimension_score"
      ],
      "additionalProperties": false,
      "properties": {
        "questions_per_dimension": {
          "type": "integer",
          "enum": [
            4
          ]
        },
        "dimension_score": {
          "type": "object"
        }
      }
    },
    "overall_scoring": {
      "type": "object",
      "required": [
        "overall_score_base",
        "weakest_link"
      ],
      "additionalProperties": false,
      "properties": {
        "overall_score_base": {
          "type": "object"
        },
        "weakest_link": {
          "type": "object",
          "required": [
            "enabled",
            "trigger_min_dim_lt",
            "cap_delta",
            "cap_expression"
          ],
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "trigger_min_dim_lt": {
              "type": "number"
            },
            "cap_delta": {
              "type": "number"
            },
            "cap_expression": {
              "type": "object"
            }
          }
        }
      }
    },
    "gaps": {
      "type": "object",
      "required": [
        "primary_gap",
        "critical_gap",
        "foundation_gap"
      ],
      "additionalProperties": false,
      "properties": {
        "primary_gap": {
          "type": "object"
        },
        "critical_gap": {
          "type": "object",
          "required": [
            "delta",
            "compare_to",
            "rule"
          ],
          "additionalProperties": false,
          "properties": {
            "delta": {
              "type": "number"
            },
            "compare_to": {
              "type": "string"
            },
            "rule": {
              "type": "object"
            }
          }
        },
        "foundation_gap": {
          "type": "object",
          "required": [
            "threshold",
            "rule"
          ],
          "additionalProperties": false,
          "properties": {
            "threshold": {
              "type": "number"
            },
            "rule": {
              "type": "object"
            }
          }
        }
      }
    },
    "level_mapping": {
      "type": "object",
      "required": [
        "score_fact",
        "ranges"
      ],
      "additionalProperties": false,
      "properties": {
        "score_fact": {
          "type": "string"
        },
        "ranges": {
          "type": "array",
          "minItems": 5,
          "maxItems": 5,
          "items": {
            "type": "object",
            "required": [
              "level",
              "min",
              "max",
              "min_inclusive",
              "max_inclusive"
            ],
            "additionalProperties": false,
            "properties": {
              "level": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5
              },
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "min_inclusive": {
                "type": "boolean"
              },
              "max_inclusive": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "tier_thresholds": {
      "type": "object",
      "required": [
        "dimension_score_fact",
        "tiers"
      ],
      "additionalProperties": false,
      "properties": {
        "dimension_score_fact": {
          "type": "string"
        },
        "tiers": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "object",
            "required": [
              "tier",
              "min",
              "max",
              "min_inclusive",
              "max_inclusive"
            ],
            "additionalProperties": false,
            "properties": {
              "tier": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high"
                ]
              },
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "min_inclusive": {
                "type": "boolean"
              },
              "max_inclusive": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "cta_rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "priority",
          "when",
          "then"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 999
          },
          "when": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "fact",
                "op",
                "value"
              ],
              "additionalProperties": false,
              "properties": {
                "fact": {
                  "type": "string"
                },
                "op": {
                  "type": "string",
                  "enum": [
                    "gte",
                    "gt",
                    "lte",
                    "lt",
                    "eq"
                  ]
                },
                "value": {}
              }
            }
          },
          "then": {
            "type": "object",
            "required": [
              "cta_tone",
              "reason"
            ],
            "additionalProperties": false,
            "properties": {
              "cta_tone": {
                "type": "string",
                "enum": [
                  "cool",
                  "warm",
                  "hot"
                ]
              },
              "reason": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
