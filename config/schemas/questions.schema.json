{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maxmin.agency/schemas/questions.schema.json",
  "type": "object",
  "required": [
    "version",
    "questions"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "minItems": 24,
      "maxItems": 24,
      "items": {
        "type": "object",
        "required": [
          "id",
          "order",
          "dimension_id",
          "section",
          "prompt",
          "options"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^q[0-9]{2}_[a-z]+(_[a-z]+)*$"
          },
          "order": {
            "type": "integer",
            "minimum": 1,
            "maximum": 24
          },
          "dimension_id": {
            "type": "string",
            "pattern": "^[a-z]+(_[a-z]+)*$"
          },
          "section": {
            "type": "string",
            "pattern": "^0[1-6]$"
          },
          "prompt": {
            "type": "string",
            "minLength": 10,
            "maxLength": 140
          },
          "options": {
            "type": "array",
            "minItems": 5,
            "maxItems": 5,
            "items": {
              "type": "object",
              "required": [
                "id",
                "label",
                "score"
              ],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string",
                  "minLength": 8,
                  "maxLength": 240
                },
                "score": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 5
                }
              }
            }
          }
        }
      }
    }
  }
}
