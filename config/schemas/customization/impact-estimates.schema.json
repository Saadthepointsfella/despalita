{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Impact Estimates Schema",
  "description": "Quantified business impact estimates by dimension and tier",
  "type": "object",
  "required": ["impact_estimates"],
  "properties": {
    "impact_estimates": {
      "type": "object",
      "required": ["_meta"],
      "properties": {
        "_meta": {
          "type": "object",
          "required": ["description", "total_entries"],
          "properties": {
            "description": { "type": "string" },
            "usage": { "type": "string" },
            "total_entries": { "type": "number" }
          }
        }
      },
      "patternProperties": {
        "^(tracking|attribution|reporting|experimentation|lifecycle|infrastructure)$": {
          "type": "object",
          "required": ["low", "medium", "high"],
          "properties": {
            "low": {
              "type": "object",
              "required": [
                "tier_range",
                "primary_metric",
                "metric_value",
                "metric_label",
                "headline",
                "detail",
                "business_impact"
              ],
              "properties": {
                "tier_range": { "type": "string" },
                "primary_metric": { "type": "string" },
                "metric_value": { "type": "string" },
                "metric_label": { "type": "string" },
                "headline": { "type": "string" },
                "detail": { "type": "string" },
                "business_impact": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 2
                },
                "cost_example": { "type": "string" },
                "opportunity": { "type": "string" }
              },
              "additionalProperties": false
            },
            "medium": {
              "type": "object",
              "required": [
                "tier_range",
                "primary_metric",
                "metric_value",
                "metric_label",
                "headline",
                "detail",
                "business_impact"
              ],
              "properties": {
                "tier_range": { "type": "string" },
                "primary_metric": { "type": "string" },
                "metric_value": { "type": "string" },
                "metric_label": { "type": "string" },
                "headline": { "type": "string" },
                "detail": { "type": "string" },
                "business_impact": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 2
                },
                "cost_example": { "type": "string" },
                "opportunity": { "type": "string" }
              },
              "additionalProperties": false
            },
            "high": {
              "type": "object",
              "required": [
                "tier_range",
                "primary_metric",
                "metric_value",
                "metric_label",
                "headline",
                "detail",
                "business_impact"
              ],
              "properties": {
                "tier_range": { "type": "string" },
                "primary_metric": { "type": "string" },
                "metric_value": { "type": "string" },
                "metric_label": { "type": "string" },
                "headline": { "type": "string" },
                "detail": { "type": "string" },
                "business_impact": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 2
                },
                "cost_example": { "type": "string" },
                "opportunity": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
