{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Level Benchmarks Schema",
  "description": "What good looks like at each level for each dimension",
  "type": "object",
  "required": ["level_benchmarks"],
  "properties": {
    "level_benchmarks": {
      "type": "object",
      "required": ["_meta"],
      "properties": {
        "_meta": {
          "type": "object",
          "required": ["description", "total_entries"],
          "properties": {
            "description": { "type": "string" },
            "usage": { "type": "string" },
            "total_entries": { "type": "number" },
            "transitions": { "type": "string" }
          }
        }
      },
      "patternProperties": {
        "^(tracking|attribution|reporting|experimentation|lifecycle|infrastructure)$": {
          "type": "object",
          "patternProperties": {
            "^[1-4]_to_[2-5]$": {
              "type": "object",
              "required": [
                "current_level",
                "current_name",
                "target_level",
                "target_name",
                "current_state",
                "target_state",
                "gap_summary",
                "success_indicator"
              ],
              "properties": {
                "current_level": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 4
                },
                "current_name": { "type": "string" },
                "target_level": {
                  "type": "number",
                  "minimum": 2,
                  "maximum": 5
                },
                "target_name": { "type": "string" },
                "current_state": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 3
                },
                "target_state": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 3
                },
                "gap_summary": { "type": "string" },
                "success_indicator": { "type": "string" },
                "typical_timeline": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
