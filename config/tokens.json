{
  "version": "1.0.0",
  "colors": {
    "background": "#0a0a0a",
    "border": "#222222",
    "text_primary": "#ffffff",
    "text_muted": "#a1a1aa",
    "levels": {
      "1": "#ef4444",
      "2": "#f97316",
      "3": "#eab308",
      "4": "#22c55e",
      "5": "#3b82f6"
    }
  },
  "typography": {
    "font_family": {
      "sans": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial",
      "mono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, Liberation Mono, monospace"
    },
    "heading_tracking": "-0.03em",
    "heading_weight": 600,
    "body_weight": 400,
    "italic_allowed": true
  },
  "layout": {
    "max_width": {
      "content": "64rem",
      "narrow": "48rem"
    },
    "section_numbering": {
      "format": "two_digit",
      "examples": [
        "01",
        "02",
        "03"
      ]
    },
    "spacing": {
      "page_padding_x": "1.5rem",
      "page_padding_y": "4rem",
      "section_gap": "2.5rem",
      "card_padding": "1.5rem"
    },
    "radius": {
      "card": "0.75rem",
      "control": "0.5rem"
    },
    "borders": {
      "width": "1px"
    }
  },
  "motifs": {
    "arrows": {
      "right": "→",
      "up_right": "↗"
    }
  }
}
